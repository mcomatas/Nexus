generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  name          String? @unique @default(uuid())
  playedGames   Int[]
  emailVerified DateTime?
  session       Session[]
  reviews       Review[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Game {
  id      Int @id @default(autoincrement())
  reviews Review[]
}

model Review {
  id         String @id @default(cuid())
  userId     String
  gameId     Int
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  game       Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  rating     Float
  reviewText String

  @@unique(name: "userGameId", [userId, gameId])
}
